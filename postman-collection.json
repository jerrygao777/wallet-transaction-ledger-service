    {
      "name": "Cursor Pagination - Page 1",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/users/1/transactions?limit=3",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users", "1", "transactions"],
          "query": [
            {
              "key": "limit",
              "value": "3"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Automatically extract and save next_cursor for subsequent requests",
              "const response = pm.response.json();",
              "if (response.next_cursor) {",
              "    pm.collectionVariables.set('next_cursor', response.next_cursor);",
              "    console.log('Saved next_cursor:', response.next_cursor);",
              "} else {",
              "    console.log('No next_cursor in response (last page)');",
              "}"
            ]
          }
        }
      ]
    },
